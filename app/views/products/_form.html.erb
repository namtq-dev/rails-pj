<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :detail %>
    <%= form.text_area :detail %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :inside %>
    <%= form.check_box :inside %>
  </div>

  <div class="field">
    <%= form.label :outside %>
    <%= form.check_box :outside %>
  </div>

  <div class="field">
    <%= form.label :smart %>
    <%= form.check_box :smart %>
  </div>

  <div class="field">
    <%= form.label :clothes %>
    <%= form.check_box :clothes %>
  </div>

  <div class="field">
    <%= form.label :functional %>
    <%= form.check_box :functional %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category_id, options_from_collection_for_select(Category.all, :id, :title, @product.category.id) %>
  </div>  

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
